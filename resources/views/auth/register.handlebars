<div class="container auth register">
    <div class="content">
        <div class="card text-center">
            <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                alt="">

            <form class="form-signin">

                <div class="input-group">
                  <label class="caption main dark">First name</label>
                  <input type="text" name="user-first-name" id="user-first-name" class="input col-ns-12" required autofocus>
                </div>

                <div class="input-group">
                  <label class="caption main dark">Last name</label>
                  <input type="text" name="user-last-name" id="user-last-name" class="input col-ns-12" required autofocus>
                </div>

                <div class="input-group">
                  <label class="caption main dark">Username</label>
                  <input type="text" name="user-name" id="user-name" class="input col-ns-12" autofocus>
                </div>

                <div class="input-group">
                  <label class="caption main dark">E-mail</label>
                  <input type="email" name="user-email" id="user-email" class="input col-ns-12" autofocus>
                </div>

                <div class="input-group">
                  <label class="caption main dark">Date of birth</label>
                  <input type="text" name="date-of-birth" id="date-of-birth" class="input col-ns-12" required autofocus>
                </div>

                <div class="input-group">
                  <label class="caption main dark">Password</label>
                  <input type="password" name="input-password" id="input-password" class="input col-ns-12" required>
                </div>

                <div class="input-group">
                  <label class="caption main dark">Confirm password</label>
                  <input type="password" name="input-password2" id="input-password2" class="input col-ns-12" required>
                </div>


                <button name="register" id="btn-register" class="btn raised pull-right" type="submit">Register</button>
            </form>

        </div>
    </div>
</div>